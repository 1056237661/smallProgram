<script>
import wepy from "wepy"
import wxRequest from '@/utils/wxRequest'
import tip from '@/utils/tip'
import Publick_fun from '../../mixins/publick_fun'
import Host from '@/utils/host'
import Session from '@/utils/session'
import wx_req from '@/utils/wxRequest/wx_req'

import recordCard from '@/components/record-card'
import insert_voice from '@/components/insert_voice'


const loginKey = Session.key.login

export default class Index extends wepy.page {

  config = {
    navigationBarTitleText: '唱嗨',
    // disableScroll: true,
    // enablePullDownRefresh: false
  }
  
  mixins = [Publick_fun]

  data = {
    lyricsMaskFlag: 'none', 

    pageFlag: true,
    loading: true,   // 默认加载中
    src: '',
    mask_img: '../../images/auth.jpg',
    changeImg: '../../images/refresh.png', 
    lyricsMaskImg: '../../images/bg.jpg',
    praisesrc: '../../images/praised.png',
    lyricsChangeImg: '../../images/refresh.png',
    page:{
      PageNo: 1,
      PageSize: 10
    },
    total:0,
    dataList:[],     // 语音列表
    lyricsList: [],  // 歌词列表
    currentLyrics: ['暂无歌词'],
    showCom: true,
    currentPlayIndex: -1
  }
  
  components = {
    recordcard: recordCard,
    insert_voice: insert_voice
  }

  //事件处理函数(集中保存在methods对象中)
  methods = {
    // 播放音乐
    playMusic(index){
      this.currentPlayIndex = index
      this.$apply()
    },
    // 点赞/取消赞
    praise(index){
      let item = this.dataList[index];
      this.fun_praise(item.MU_ID, item.LIKE_STATUE);
      item.MU_LIKE += item.LIKE_STATUE? -1 : 1 ;
      item.LIKE_STATUE = !item.LIKE_STATUE;
      this.$apply();
    },
    // 成功授权回调
    async bindGetUserInfo (e) {
      const userInfo = e.detail.userInfo || null;  //获取用户信息
      if(userInfo){
        // 授权成功
        await wxRequest.reLogin();
        this.Get_MessageCount();
        wx.showTabBar()
        this.getPreOrders()
        this.pageFlag = true;
        this.$apply();
      }
    },
    getList(){
      this.getPreOrders()
      this.lyricsMaskFlag = 'none'
      this.currentLyrics = {}
      this.$apply()
    },
    seeLyric(item){
      item.S_IYRICS = item.S_IYRICS ? item.S_IYRICS.split('，') : ['暂无歌词']
      this.currentLyrics = item
      this.lyricsMaskFlag = 'black'
      this.$apply()
    },
    closeLyric(){
      this.lyricsMaskFlag = 'none'
      this.currentLyrics = {}
      this.$apply()
    }
  }

  // 获取列表
  async getPreOrders(num) {
    tip.loading();
    this.dataList =  [];
    this.page.PageNo = 1;
    this.page.PageSize = num || 10 ;
    const data = await wxRequest.Get('/mydb/Get_NewMusic',this.page);
    this.total = data.total;
    this.dataList = data.list
    this.loading = false
    this.$apply()
    tip.loaded();
    return true;
  }

  async getLyricsList() {
    this.lyricsList = await wxRequest.Get('/mydb/Get_Iyrics')

    // this.lyricsList.forEach(item => {
    //   item.S_NAME_2 = item.S_NAME.length > 6 ? `${item.S_NAME.substr(0,6)}···` : item.S_NAME ;
    // });

    this.$apply()
  }

  // 下拉刷新
  async onPullDownRefresh(){
    if(this.pageFlag){
      wx.showNavigationBarLoading();  //导航栏加载中动画
      let flag = await this.getPreOrders();
      wx.stopPullDownRefresh({
          success(){ wx.hideNavigationBarLoading(); }
          ,fail(){ console.log('下拉刷新 fail') }
          ,complete(){ console.log('下拉刷新 complete') }
      });
    }else{
       wx.stopPullDownRefresh();
    }
  }

  // 上拉加载
  async onReachBottom (){
    if(this.pageFlag){
      tip.loading('玩命加载中');
      const PageNo = this.total/this.page.PageSize;
      if( PageNo > this.page.PageNo ){
        this.page.PageNo++
        const data = await wxRequest.Get('/mydb/Get_NewMusic',this.page);
        this.total = data.total;
        this.dataList.push(...data.list);
        this.$apply()
        tip.loaded();
      }else{
        tip.toast("扯到 👖 了，还拉！", 'none')
      }
    }
  }

  // 当前播放下标变换
  playMusic(index){
    this.currentPlayIndex = index
    this.$apply()
  }
  
  //页面的生命周期函数
  async onLoad() {
    this.pageFlag = wx_req.getSession_id() || false ;
    this.pageFlag && ( wx.showTabBar(), this.getPreOrders() );// 加载列表
    !this.pageFlag && (wx.hideTabBar(),this.getPreOrders(4));
    this.getLyricsList();
    this.$apply();
    // 显示转发
    wx_req.showShareMenu();
  }
  
  onShow() {
    this.$invoke('recordcard', 'musicStop');
    this.Get_MessageCount();
  }
  
  onHide() {
    this.$invoke('recordcard', 'musicStop');
    this.playMusic(-1);
  }

}
</script>


