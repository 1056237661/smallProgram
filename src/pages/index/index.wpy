  //‰∫ã‰ª∂Â§ÑÁêÜÂáΩÊï∞(ÈõÜ‰∏≠‰øùÂ≠òÂú®methodsÂØπË±°‰∏≠)
  methods = {
    // Êí≠ÊîæÈü≥‰πê
    playMusic(index){
      this.currentPlayIndex = index
      this.$apply()
    },
    // ÁÇπËµû/ÂèñÊ∂àËµû
    praise(index){
      let item = this.dataList[index];
      this.fun_praise(item.MU_ID, item.LIKE_STATUE);
      item.MU_LIKE += item.LIKE_STATUE? -1 : 1 ;
      item.LIKE_STATUE = !item.LIKE_STATUE;
      this.$apply();
    },
    // ÊàêÂäüÊéàÊùÉÂõûË∞É
    async bindGetUserInfo (e) {
      const userInfo = e.detail.userInfo || null;  //Ëé∑ÂèñÁî®Êà∑‰ø°ÊÅØ
      if(userInfo){
        // ÊéàÊùÉÊàêÂäü
        await wxRequest.reLogin();
        this.Get_MessageCount();
        wx.showTabBar()
        this.getPreOrders()
        this.pageFlag = true;
        this.$apply();
      }
    },

    getList(){
      this.getPreOrders();
    }
  }

  // Ëé∑ÂèñÂàóË°®
  async getPreOrders(num) {
    tip.loading();
    this.dataList =  [];
    this.page.PageNo = 1;
    this.page.PageSize = num || 10 ;
    const data = await wxRequest.Get('/mydb/Get_NewMusic',this.page);
    this.total = data.total;
    this.dataList = data.list
    this.loading = false
    this.$apply()
    tip.loaded();
    return true;
  }

  //È°µÈù¢ÁöÑÁîüÂëΩÂë®ÊúüÂáΩÊï∞
  async onLoad() {
    this.pageFlag = wx_req.getSession_id() || false ;
    this.pageFlag && ( wx.showTabBar(), this.getPreOrders() );// Âä†ËΩΩÂàóË°®
    !this.pageFlag && (wx.hideTabBar(),this.getPreOrders(4));
    this.$apply();
  }

  // ‰∏ãÊãâÂà∑Êñ∞
  async onPullDownRefresh(){
    if(this.pageFlag){
      wx.showNavigationBarLoading();  //ÂØºËà™Ê†èÂä†ËΩΩ‰∏≠Âä®Áîª
      let flag = await this.getPreOrders();
      wx.stopPullDownRefresh({
          success(){ wx.hideNavigationBarLoading(); }
          ,fail(){ console.log('‰∏ãÊãâÂà∑Êñ∞ fail') }
          ,complete(){ console.log('‰∏ãÊãâÂà∑Êñ∞ complete') }
      });
    }else{
       wx.stopPullDownRefresh();
    }
  }

  // ‰∏äÊãâÂä†ËΩΩ
  async onReachBottom (){
    if(this.pageFlag){
      tip.loading('Áé©ÂëΩÂä†ËΩΩ‰∏≠');
      const PageNo = this.total/this.page.PageSize;
      if( PageNo > this.page.PageNo ){
        this.page.PageNo++
        const data = await wxRequest.Get('/mydb/Get_NewMusic',this.page);
        this.total = data.total;
        this.dataList.push(...data.list);
        this.$apply()
        tip.loaded();
      }else{
        tip.toast("ÊâØÂà∞ üëñ ‰∫ÜÔºåËøòÊãâÔºÅ", 'none')
      }
    }
  }
  
  onShow () {
    this.$invoke('recordcard', 'musicStop');
    this.Get_MessageCount();
  }
  
  onHide() {
    this.$invoke('recordcard', 'musicStop');
  }
}
</script>


